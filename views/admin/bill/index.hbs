<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3>รายละเอียดบิล</h3>
              
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-remove"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
{{#each data}}
     <div class="row">
        <div class="col-md-6">
          <div class="box box-danger">
            <div class="box-header">
              <h3 class="box-title">รายละเอียดหัว</h3>
            </div>
            <div class="box-body">
			<form action="" method="post">
              <div class="form-group">
                <label>ชื่อบริษัท</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="name_office" value="{{ this.name_office}}" class="form-control" >
                </div>
              </div>
              <div class="form-group">
                <label>เลขที่เสียภาษี</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="receipt_number" value="{{ this.receipt_number }}" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label>หัวข้อใบเสร็จ</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="title_header" value="{{ this.title_header }}"  class="form-control">
                </div>
              </div>
                 <div class="form-group">
                <label>ที่อยู่</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="address" value="{{ this.address }}"  class="form-control" >
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="box box-primary">
            <div class="box-header">
              <h3 class="box-title">รายละเอียดท้าย</h3>
            </div>
            <div class="box-body">
              <div class="form-group">
                <label>รายละเอียดต้น</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="detail1" value="{{ this.detail1 }}"  class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label>รายละเอียดรอง</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="glyphicon glyphicon-chevron-right"></i>
                  </div>
                  <input type="text" name="detail2" value="{{ this.detail2 }}"  class="form-control" >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      <center><button type="submit" class="btn btn-warning"> บันทึกข้อมูล</button></center>
        </div>
		
    </div>
	</form>
</section>
